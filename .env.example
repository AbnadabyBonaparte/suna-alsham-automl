# ================================================================================
# ALSHAM QUANTUM - Environment Variables Template
# Sistema Multi-Agente de IA Autônomo v2.0
# ================================================================================

# ===== SISTEMA CORE =====
SYSTEM_NAME=ALSHAM_QUANTUM
VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# ===== RAILWAY DEPLOYMENT =====
RAILWAY_ENVIRONMENT_NAME=production
RAILWAY_SERVICE_NAME=alsham-quantum
RAILWAY_DEPLOYMENT_ID=your-deployment-id
PORT=8000
HOST=0.0.0.0

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://user:password@localhost:5432/alsham_quantum
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ===== REDIS CACHE =====
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=256

# ===== AI PROVIDERS =====

# OpenAI (CRÍTICO)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_REGION=us-central1

# ===== NOTIFICATION SERVICES =====

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Email Configuration (Outlook)
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-outlook-password
OUTLOOK_SMTP_SERVER=smtp-mail.outlook.com
OUTLOOK_SMTP_PORT=587

# Custom SMTP
CUSTOM_SMTP_SERVER=your-smtp-server.com
CUSTOM_SMTP_PORT=587
CUSTOM_SMTP_USER=your-smtp-user
CUSTOM_SMTP_PASSWORD=your-smtp-password
CUSTOM_SMTP_USE_TLS=true

# SMS & Voice (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-whatsapp-phone-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# ===== SOCIAL MEDIA INTEGRATIONS =====

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_GENERAL=#general
SLACK_CHANNEL_ALERTS=#alerts

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_CHANNEL_ID=your-discord-channel-id

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===== SECURITY & AUTHENTICATION =====
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# API Keys Security
API_KEY_ENCRYPTION_KEY=your-encryption-key
MASTER_API_KEY=your-master-api-key

# ===== MONITORING & LOGGING =====
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ===== PERFORMANCE TUNING =====

# Async Configuration
ASYNC_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=60
CONNECTION_POOL_SIZE=20

# Memory Management
MAX_MEMORY_MB=1024
GARBAGE_COLLECTION_THRESHOLD=700
MEMORY_ALERT_THRESHOLD=85

# Worker Configuration
WORKERS=1
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2

# ===== EVOLUTION ENGINE =====
EVOLUTION_ENABLED=true
SYNTHETIC_DATA_GENERATION=true
AUTO_LEARNING_ENABLED=true
LEARNING_RATE=0.001
MODEL_UPDATE_INTERVAL=3600
DATA_GENERATION_BATCH_SIZE=100

# ML Model Configuration
ML_MODEL_PATH=/app/models
ML_CACHE_SIZE=512
ML_INFERENCE_TIMEOUT=30

# ===== MESSAGE BUS =====
MESSAGE_BUS_TYPE=redis
MESSAGE_BUS_URL=redis://localhost:6379/1
MESSAGE_QUEUE_SIZE=1000
MESSAGE_RETENTION_HOURS=24

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TASK_TIMEOUT=300
CELERY_MAX_RETRIES=3

# ===== EXTERNAL INTEGRATIONS =====

# Web Scraping
USER_AGENT=ALSHAM-QUANTUM/2.0
REQUEST_DELAY_MS=1000
MAX_RETRIES=3
PROXY_ENABLED=false
PROXY_URL=

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/app/storage
MAX_FILE_SIZE_MB=100

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=alsham-quantum-storage
AWS_REGION=us-east-1

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# API Rate Limits
OPENAI_RATE_LIMIT=50
ANTHROPIC_RATE_LIMIT=30
GOOGLE_RATE_LIMIT=40

# ===== BACKUP & RECOVERY =====
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=/app/backups

# ===== NETWORKING =====
ALLOWED_HOSTS=*
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Proxy Configuration
PROXY_ENABLED=false
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ===== DEVELOPMENT =====
RELOAD_ON_CHANGE=true
AUTO_MIGRATIONS=true
FIXTURE_LOADING=true
TEST_DATABASE_URL=sqlite:///test.db

# Debug Configuration
VERBOSE_LOGGING=true
SQL_ECHO=false
PROFILE_ENABLED=false

# ===== EXPERIMENTAL FEATURES =====
QUANTUM_OPTIMIZATION=true
NEURAL_ACCELERATION=true
PREDICTIVE_SCALING=true
AUTO_DEPLOYMENT=false

# ===== NOTIFICATION RULES =====
NOTIFY_ON_STARTUP=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_WARNING=false
NOTIFY_ON_SUCCESS=true

# Alert Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_THRESHOLD=5

# ================================================================================
# INSTRUÇÕES DE CONFIGURAÇÃO:
#
# 1. CRÍTICAS (Sistema não funciona sem):
#    - OPENAI_API_KEY
#    - DATABASE_URL
#    - SECRET_KEY
#
# 2. IMPORTANTES (Funcionalidade limitada sem):
#    - GMAIL_USER, GMAIL_PASSWORD (para notificações)
#    - REDIS_URL (para cache e filas)
#
# 3. OPCIONAIS (Funcionalidades extras):
#    - ANTHROPIC_API_KEY, GOOGLE_AI_API_KEY (mais providers)
#    - SLACK_BOT_TOKEN, DISCORD_BOT_TOKEN (integrações sociais)
#    - TWILIO_* (SMS e WhatsApp)
#
# 4. Para Railway:
#    - Configure as variáveis críticas no painel Railway
#    - Use $PORT para a porta (Railway define automaticamente)
#    - DATABASE_URL será fornecida pelo Railway se usar PostgreSQL add-on
#
# ================================================================================
