# ================================================================
# ALSHAM QUANTUM - Environment Variables Configuration
# [Quantum Version 2.0] - Complete Multi-Provider Setup
# ================================================================

# ================================================================
# CORE SYSTEM CONFIGURATION
# ================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SYSTEM_NAME=ALSHAM_QUANTUM
VERSION=2.0.0

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
SYSTEM_TIMEOUT=300

# ================================================================
# AI PROVIDERS - QUANTUM INTELLIGENCE
# ================================================================

# OpenAI Configuration (Primary AI Provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.2
OPENAI_TIMEOUT=30

# Anthropic Configuration (Secondary AI Provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.2
ANTHROPIC_TIMEOUT=30

# Google AI Configuration (Tertiary AI Provider)
GOOGLE_API_KEY=your-google-ai-api-key-here
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4000
GOOGLE_TEMPERATURE=0.2
GOOGLE_TIMEOUT=30

# ================================================================
# EMAIL PROVIDERS - QUANTUM NOTIFICATION
# ================================================================

# Gmail Configuration (Primary Email Provider)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Outlook Configuration (Secondary Email Provider)
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-outlook-password

# Custom SMTP Configuration (Tertiary Email Provider)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_TLS=true

# ================================================================
# DATABASE CONFIGURATION
# ================================================================

# Primary Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis Configuration (Caching and Session Management)
REDIS_URL=redis://username:password@host:port/0
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=100

# Backup Database (Optional - for disaster recovery)
BACKUP_DATABASE_URL=postgresql://backup-user:password@backup-host:port/backup-db

# ================================================================
# WEB SERVICES AND APIs
# ================================================================

# Search and Data APIs
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
SERP_API_KEY=your-serp-api-key

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ================================================================
# SECURITY AND AUTHENTICATION
# ================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_BURST=20
API_CORS_ORIGINS=*

# Security Enhancements
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_VALIDATION_ENABLED=true
SECURITY_ENCRYPTION_ENABLED=true

# ================================================================
# PERFORMANCE AND SCALING
# ================================================================

# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
WORKER_KEEP_ALIVE=2

# Concurrency Limits
MAX_CONCURRENT_MISSIONS=10
MAX_CONCURRENT_AGENTS=100
MAX_MESSAGE_QUEUE_SIZE=10000

# Memory and Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_USAGE_PERCENT=80
MAX_DISK_USAGE_PERCENT=85

# ================================================================
# MONITORING AND LOGGING
# ================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/alsham-quantum.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_ROTATION_ENABLED=true

# Monitoring Services
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Health Check URLs
HEALTH_CHECK_URL=/health
METRICS_URL=/metrics
STATUS_URL=/status

# ================================================================
# DEVELOPMENT AND DEBUGGING
# ================================================================

# Development Mode (Set to false in production)
DEV_MODE=false
DEV_AUTO_RELOAD=false
DEV_SHOW_SQL=false

# Debug Features
DEBUG_AGENTS=false
DEBUG_MESSAGES=false
DEBUG_PERFORMANCE=false
DEBUG_MEMORY=false

# Testing Configuration
TEST_MODE=false
TEST_DATABASE_URL=sqlite:///test.db
TEST_SKIP_AI_CALLS=false

# ================================================================
# BACKUP AND DISASTER RECOVERY
# ================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Cloud Backup (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# Disaster Recovery
DR_ENABLED=true
DR_REPLICA_DATABASE_URL=postgresql://dr-user:password@dr-host:port/dr-db
DR_FAILOVER_THRESHOLD_MINUTES=10

# ================================================================
# ADVANCED FEATURES
# ================================================================

# Machine Learning and Evolution
ML_ENABLED=true
ML_MODEL_STORAGE_PATH=/app/models
ML_TRAINING_INTERVAL_MINUTES=300
ML_MIN_TRAINING_SAMPLES=5

# Quantum Features
QUANTUM_COHERENCE_ENABLED=true
QUANTUM_EVOLUTION_ENABLED=true
QUANTUM_OPTIMIZATION_ENABLED=true

# Analytics and Reporting
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_EXPORT_ENABLED=true

# ================================================================
# EXTERNAL INTEGRATIONS
# ================================================================

# Payment Processing (if needed)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# File Storage
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=/app/storage
FILE_MAX_SIZE_MB=100

# Cloud Storage (Alternative)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_FOLDER=alsham-quantum

# ================================================================
# RAILWAY SPECIFIC CONFIGURATION
# ================================================================

# Railway Platform Settings
PORT=8080
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_SERVICE_ID=your-railway-service-id

# Auto-scaling Configuration
RAILWAY_AUTOSCALE_ENABLED=true
RAILWAY_MIN_INSTANCES=1
RAILWAY_MAX_INSTANCES=5
RAILWAY_CPU_THRESHOLD=70
RAILWAY_MEMORY_THRESHOLD=80

# ================================================================
# FEATURE FLAGS
# ================================================================

# System Features
FEATURE_WEB_SEARCH=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AI_ANALYSIS=true
FEATURE_EVOLUTION_ENGINE=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_BACKUP_SYSTEM=true
FEATURE_SECURITY_ENHANCEMENTS=true

# Experimental Features
FEATURE_QUANTUM_COHERENCE=true
FEATURE_PARALLEL_EXECUTION=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_AUTO_OPTIMIZATION=true

# ================================================================
# CUSTOM DOMAIN AND SSL
# ================================================================

# Domain Configuration
CUSTOM_DOMAIN=your-domain.com
SSL_ENABLED=true
SSL_REDIRECT=true
HSTS_ENABLED=true

# ================================================================
# END OF CONFIGURATION
# ================================================================
