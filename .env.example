# =====================================================
# SUNA-ALSHAM - Variáveis de Ambiente
# Sistema de Agentes Auto-Evolutivos com AutoML Real
# =====================================================

# =====================================================
# SUPABASE DATABASE CONFIGURATION
# =====================================================
# URL do seu projeto Supabase
SUPABASE_URL=https://seu-projeto-id.supabase.co

# Chave pública (anon key ) do Supabase
SUPABASE_KEY=sua-chave-publica-aqui

# =====================================================
# SUNA-ALSHAM SYSTEM CONFIGURATION
# =====================================================

# Auto-inicialização do sistema (true/false)
SUNA_ALSHAM_AUTO_START=true

# Intervalo entre ciclos de evolução (em minutos)
SUNA_ALSHAM_EVOLUTION_INTERVAL=60

# Modo debug (true/false)
SUNA_ALSHAM_DEBUG=false

# Versão do sistema
SUNA_ALSHAM_VERSION=2.1.0

# =====================================================
# CORE AGENT AUTOML CONFIGURATION
# =====================================================

# Habilitar Core Agent (true/false)
SUNA_ALSHAM_CORE_ENABLED=true

# Percentual mínimo de melhoria esperado
SUNA_ALSHAM_CORE_MIN_IMPROVEMENT=5.0

# Número de trials para otimização Optuna
SUNA_ALSHAM_CORE_OPTUNA_TRIALS=30

# =====================================================
# AUTOML SPECIFIC CONFIGURATION
# =====================================================

# Ambiente de execução (development/production)
SUNA_ENV=production

# Número de trials Optuna (15 prod / 30 dev)
OPTUNA_TRIALS=15

# Timeout para otimização (em segundos)
AUTOML_TIMEOUT=180

# Algoritmo de otimização (TPE, Random, CmaEs)
AUTOML_SAMPLER=TPE

# =====================================================
# LOGGING CONFIGURATION
# =====================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Formato de log (json/text)
LOG_FORMAT=text

# =====================================================
# RAILWAY DEPLOYMENT CONFIGURATION
# =====================================================

# Porta para o servidor (Railway define automaticamente)
PORT=8000

# Ambiente de execução
ENVIRONMENT=production

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# Chave secreta para JWT (gere uma aleatória)
SECRET_KEY=sua-chave-secreta-muito-longa-e-aleatoria

# Salt para hashing
SECURITY_SALT=seu-salt-aleatorio

# =====================================================
# MLFLOW CONFIGURATION (OPTIONAL)
# =====================================================

# MLflow tracking URI
MLFLOW_TRACKING_URI=file:./mlruns

# Habilitar MLflow (true/false)
MLFLOW_ENABLED=true

# =====================================================
# VALORES RECOMENDADOS PARA PRODUÇÃO
# =====================================================

# Para produção, use estes valores:
# SUNA_ALSHAM_AUTO_START=true
# SUNA_ALSHAM_EVOLUTION_INTERVAL=60
# SUNA_ALSHAM_DEBUG=false
# LOG_LEVEL=INFO
# SUNA_ENV=production
# OPTUNA_TRIALS=15
# AUTOML_TIMEOUT=180
# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# Chave secreta para JWT (gere uma aleatória)
SECRET_KEY=sua-chave-secreta-muito-longa-e-aleatoria

# Salt para hashing
SECURITY_SALT=seu-salt-aleatorio

# [NOVO] Chave secreta da API do Stripe
STRIPE_API_KEY=sk_test_sua_chave_secreta_aqui_
