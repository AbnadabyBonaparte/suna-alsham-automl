{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "REDIS_URL": "${{Redis.REDIS_URL}}",
        "DATABASE_URL": "${{Postgres.DATABASE_URL}}"
      }
    }
  }
}
